<Window x:Class="Check.SPort.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sm="clr-namespace:System;assembly=mscorlib"
        xmlns:vm="clr-namespace:Check.SPort.ViewModel"
        xmlns:helper="clr-namespace:Check.SPort.Helper"
        mc:Ignorable="d"
        FontFamily="Impact"
        Title="P R O T O C O L - C O N N E C T I O N"
        Height="450" Width="900"
        MinHeight="300" MinWidth="850"
        AllowsTransparency="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        Background="Transparent"
        x:Name="ResponsiveWindow">

    <Window.DataContext>
        <vm:NavigationViewModel />
    </Window.DataContext>

    <Grid>
        <!--// Window Border //-->
        <Border Background="#212529" CornerRadius="20,00,0,20" BorderThickness="5" BorderBrush="#3A4149" />

        <Grid>
            <!--// Base Grid //-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="725*" />
            </Grid.ColumnDefinitions>

            <!--// Navigation Panel //-->
            <Grid x:Name="nav_pnl" HorizontalAlignment="Left" Width="65" MouseLeftButtonDown="BorderMove_MouseLeftButtonDown">
                <Border Background="#272B2F" CornerRadius="20,0,0,20" />

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="90*" />
                        <RowDefinition Height="200*" />
                    </Grid.RowDefinitions>
                    
                    <!--// Grid for the Menu Toggle Button //-->
                    <DockPanel>

                        <!--// Toggle Button //-->
                        <ToggleButton x:Name="Tg_Btn"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Left"
                                      Margin="20,0,0,0"
                                      Height="30"
                                      Width="30"
                                      BorderThickness="0"
                                      Style="{StaticResource tb_style}">
                            <ToggleButton.Triggers>
                                <EventTrigger RoutedEvent="ToggleButton.Unchecked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="HideStackPanel">
                                            <DoubleAnimation Storyboard.TargetName="nav_pnl"
                                                             Storyboard.TargetProperty="Width"
                                                             BeginTime="0:0:0"
                                                             From="175" To="65"
                                                             Duration="0:0:0.2" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="ToggleButton.Checked">
                                    <BeginStoryboard>
                                        <Storyboard x:Name="ShowStackPanel">
                                            <DoubleAnimation Storyboard.TargetName="nav_pnl"
                                                             Storyboard.TargetProperty="Width"
                                                             BeginTime="0:0:0"
                                                             From="65" To="175"
                                                             Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </ToggleButton.Triggers>
                        </ToggleButton>

                        <!--// Menu title test //-->
                        <TextBlock Margin="25,0,0,0"
                                   Text="M E N U"
                                   Foreground="White"
                                   FontSize="22"
                                   HorizontalAlignment="Left"
                                   VerticalAlignment="Center" />
                    </DockPanel>

                    <!--// ListView with menu list item //-->
                    <ListView x:Name="LV"
                              Grid.Row="1"
                              Background="Transparent"
                              BorderBrush="Transparent"
                              ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                        <!--// Home //-->
                        <ListViewItem HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter">
                            <StackPanel Orientation="Horizontal" Width="200">
                                <Button Command="{Binding HomeCommand}" Style="{StaticResource BtnHomeStyle}" />
                                <TextBlock Text="Home" Margin="25,0,0,0" Style="{StaticResource font_style}" />
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_home" Content="Home" Style="{StaticResource tt_style}" />
                            </ListViewItem.ToolTip>
                        </ListViewItem>

                        <!--// Testing Protocol XonXoff o Custom //-->
                        <ListViewItem HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter">
                            <StackPanel Orientation="Horizontal" Width="200">
                                <Button Command="{Binding ComunicazioneCommand}" Style="{StaticResource BtnProtocolStyle}" />
                                <TextBlock Text="Connction" Margin="25,0,0,0" Style="{StaticResource font_style}" />
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_protocol" Content="Connction" Style="{StaticResource tt_style}" />
                            </ListViewItem.ToolTip>
                        </ListViewItem>

                        <!--// Protocol Settings //-->
                        <ListViewItem HorizontalAlignment="Left" Margin="0,0,0,15" MouseEnter="ListViewItem_MouseEnter">
                            <StackPanel Orientation="Horizontal" Width="200">
                                <Button Command="{Binding SettingsCommand}" Style="{StaticResource BtnSettingsStyle}" />
                                <TextBlock Text="Settings" Margin="25,0,0,0" Style="{StaticResource font_style}" />
                            </StackPanel>
                            <ListViewItem.ToolTip>
                                <ToolTip x:Name="tt_settings" Content="Settings" Style="{StaticResource tt_style}" />
                            </ListViewItem.ToolTip>
                        </ListViewItem>

                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListViewItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="{x:Type ListViewItem}">
                                            <Border x:Name="Bd"
                                                    Height="50"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Background="{TemplateBinding Background}"
                                                    Padding="{TemplateBinding Padding}"
                                                    SnapsToDevicePixels="True">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                  SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                                                  VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <MultiTrigger>
                                                    <MultiTrigger.Conditions>
                                                        <Condition Property="IsMouseOver" Value="True" />
                                                    </MultiTrigger.Conditions>
                                                    <Setter Property="Background" TargetName="Bd" Value="#404D5B" />
                                                    <Setter Property="BorderBrush" TargetName="Bd" Value="#404D5B" />
                                                </MultiTrigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </Grid>
            </Grid>

            <Grid Grid.Column="1">

                <ContentControl Content="{Binding CurrentViewModel}" />

            </Grid>
        </Grid>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="55" />
                <ColumnDefinition Width="55" />
                <ColumnDefinition Width="55" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="5" />
                <RowDefinition Height="55" />
                <RowDefinition Height="5" />
            </Grid.RowDefinitions>

            <Border x:Name="BorderMove"
                    Grid.Column="0" Grid.Row="1"
                    Background="#FF3A4149"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    Height="25" Width="250"
                    CornerRadius="0,0,20,20"
                    Margin="180,0,0,0"
                    MouseLeftButtonDown="BorderMove_MouseLeftButtonDown">
                <TextBlock Text="{Binding Title, ElementName=ResponsiveWindow}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FFCCCCCC" FontFamily="Segoe UI" FontWeight="SemiBold" FontSize="12">
                    <TextBlock.Effect>
                        <DropShadowEffect BlurRadius="2" ShadowDepth="0" Color="Black" Opacity="0.6"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Border>

            <Button Grid.Column="1" Grid.Row="1" x:Name="MinApp" Style="{StaticResource MiniAppStyle}" Command="{Binding MiniAppCommand}" CommandParameter="{Binding ElementName=ResponsiveWindow}" />
            <Button Grid.Column="2" Grid.Row="1" x:Name="MaxApp" Style="{StaticResource MaxAppStyle}" Command="{Binding MaxAppCommand}" CommandParameter="{Binding ElementName=ResponsiveWindow}" />
            <Button Grid.Column="3" Grid.Row="1" x:Name="CloseApp" Style="{StaticResource ExitApp}" Command="{Binding CloseAppCommand}" CommandParameter="{Binding ElementName=ResponsiveWindow}"/>
        </Grid>

    </Grid>

</Window>
